let mapleader = " "

nmap <Esc> :noh<CR>

nmap <Up> <nop>
nmap <Down> <nop>
nmap <Left> <nop>
nmap <Right> <nop>

map <leader><Space> <Action>(SearchEverywhere)

map <leader>cr <Action>(RenameElement)
map <leader>ca <Action>(ShowIntentionActions)

nmap gI <Action>(ReSharperGotoImplementation)
nmap gr <Action>(FindUsages)
nmap gc <Action>(CommentByLineComment)

nmap <A-j> <Action>(MoveLineDown)
nmap <A-k> <Action>(MoveLineUp)
vmap <A-j> <Action>(MoveLineDown)
vmap <A-k> <Action>(MoveLineUp)

vmap gq <Action>(ReformatCode)
vmap gc <Action>(CommentByLineComment)

imap <C-i> <Action>(copilot.requestCompletions)

